
@{
    Layout = null;
    ViewBag.Title = "Results";
}
@using System.Web.Optimization
@*@model VerificationISO27001.Models.MListOfQuestionsData*@

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    @Styles.Render("~/bundles/list/css")
    @Styles.Render("~/bundles/main/css")

    <title>ISO-27001</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
</head>

<body class="my-bg-color1">
    <div class="container mt-5">
        <p class="h1 text-white">Verification of ISO-27001</p>
    </div>
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <canvas id="myChart" style="width:100%;max-width:800px"></canvas>
    </div>
    <div class="container mt-5">
        <p class="h3 text-white">Verification of ISO-27001 was <span class="text-danger">failed</span></p>
        <p class="h3 text-white">Your company meets the standard at <span class="text-danger">30%</span></p>
    </div>
    <div class="container mt-5">
        <p class="h2 text-white">Your Results</p>
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Question</th>
                    <th scope="col">Risk</th>
                    <th scope="col">Answer</th>
                    <th scope="col">Points Scored</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td class="col-6">Lorem ipsum dolor sit amet consectetur adipisicing elit. Corporis saepe possimus, magni eveniet accusamus labore non vel exercitationem, consectetur cum, amet natus vero harum nulla optio molestias voluptatum doloribus voluptas?</td>
                    <td>I don't know</td>
                    <td>I don't know</td>
                    <td>4</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>I don't know</td>
                    <td>Thornton</td>
                    <td>fat</td>
                    <td>mdo</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Larry the Bird</td>
                    <td>twitter</td>
                    <td>twitter</td>
                    <td>mdo</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="container mt-5 mb-5">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary text-white ms-2">Try again</a>
    </div>

    <script>
        var xValues = ["High", "Lower", "Acceptable"];
        var yValues = [55, 49, 44];
        var barColors = [
            "#e73741",
            "#fdc803",
            "#7db82b"
        ];

        new Chart("myChart", {
            type: "doughnut",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Risks",
                    fontColor: "#ffffff",
                    fontSize: 26
                },
                legend: {
                    labels: {
                        fontColor: "#ffffff",
                        fontSize: 20
                    }
                }
            }
        });
    </script>

    @Scripts.Render("~/bundles/script/js")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
</body>

</html>

