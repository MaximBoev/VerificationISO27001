
@{
    Layout = null;
    ViewBag.Title = "Index";
}
@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="style.css" rel="stylesheet">

    @Styles.Render("~/bundles/main/css")

    <title>ISO-27001</title>
</head>

<body class="my-bg-color1">
    <div class="container mt-5">
        <p class="h1 text-white">Verification of ISO-27001</p>
    </div>
    <div class="container mt-5">
        @using (Html.BeginForm("StartFAQ", "Home", FormMethod.Post, new { autocomplete = "off" }))
        {
            <div class="col-sm-6">
                <label for="firstName" class="form-label text-white">Organisation name</label>
                <div class="d-flex align-items-center">
                    <input type="text" name="CompanyName" class="form-control" id="firstName" placeholder="" required>
                    <button type="submit" class="btn btn-primary text-white ms-2">Start</button>
                </div>
            </div>
        }
        </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
</body>

</html>

